generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model customer {
  customerId  Int        @id @default(autoincrement())
  companyName String
  orgNr       String
  phoneNumber String
  email       String     @unique
  custName    String
  password    String
  bookings    bookings[]
  history     history[]
}

model employee {
  employeeId     Int        @id @default(autoincrement())
  personalNumber String
  accountNumber  String
  phoneNumber    String
  email          String     @unique
  adress         String
  role           String
  employeeName   String
  password       String
  bookings       bookings[]
  history        history[]
}

model bookings {
  bookingId    Int        @id @default(autoincrement()) @map("Boknings ID")
  customerId   Int        @map("Kund ID")
  customerName String     @map("Namn")
  cleanerName  String     @map("Städare")
  date         String     @map("Datum")
  adress       String     @map("Besöksadress")
  time         String     @map("Bokad tid")
  status       String     @map("Bokningsstatus")
  customer     customer   @relation(fields: [customerId], references: [customerId], onDelete: Cascade)
  employee     employee[] @relation("bookingstoemployee")

  @@index([customerId], map: "bookings_customerId_fkey")
}

model history {
  bookingId    Int      @id @default(autoincrement())
  employeeId   Int
  customerId   Int
  customerName String
  cleanerName  String
  date         DateTime
  adress       String
  time         DateTime
  status       String
  customer     customer @relation(fields: [customerId], references: [customerId])
  employee     employee @relation(fields: [employeeId], references: [employeeId])

  @@index([customerId], map: "history_customerId_fkey")
  @@index([employeeId], map: "history_employeeId_fkey")
}
