generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model customer {
  customerId  Int        @id @default(autoincrement())
  companyName String
  orgNr       String
  phoneNumber String
  email       String     @unique
  adress      String
  custName    String
  password    String
  forceChangePass String
  bookings    bookings[]
  history     history[]
}

model employee {
  employeeId     Int        @id @default(autoincrement())
  personalNumber String
  accountNumber  String
  phoneNumber    String
  email          String     @unique
  adress         String
  role           String
  employeeName   String
  password       String
  forceChangePass String
  bookings       bookings[] @relation("bookingstoemployee")
  history        history[]  @relation("employeetohistory")
}

model bookings {
  bookingId       Int        @id @default(autoincrement())
  customerId      Int
  customerName    String
  cleanerName     String
  companyName     String
  date            String
  adress          String
  phoneNumber     String
  cleaningService String
  time            String
  status          String
  customer        customer   @relation(fields: [customerId], references: [customerId])
  employee        employee[] @relation("bookingstoemployee")

  @@index([customerId], map: "bookings_customerId_fkey")
}

model history {
  bookingId    Int        @id @default(autoincrement())
  customerId   Int
  customerName String
  cleanerName  String
  date         DateTime
  adress       String
  time         DateTime
  status       String
  customer     customer   @relation(fields: [customerId], references: [customerId])
  employee     employee[] @relation("employeetohistory")

  @@index([customerId], map: "history_customerId_fkey")
}
