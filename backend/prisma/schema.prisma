generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model customer {
  customerId  Int        @id @default(autoincrement())
  companyName String
  orgNr       String
  phoneNumber String
  email       String     @unique
  custName    String
  password    String
  bookings    bookings[]
  history     history[]
}

model employee {
  employeeId     Int        @id @default(autoincrement())
  personalNumber String
  accountNumber  String
  phoneNumber    String
  email          String     @unique
  adress         String
  role           String
  employeeName   String
  password       String
  bookings       bookings[]
  history        history[]
}

model bookings {
  bookingId    Int      @id @default(autoincrement())
  employeeId   Int
  customerId   Int
  customerName String
  cleanerName  String
  date         DateTime
  adress       String
  time         DateTime
  status       String
  customer     customer @relation(fields: [customerId], references: [customerId])
  cleaner      employee @relation(fields: [employeeId], references: [employeeId])

  @@index([customerId], map: "bookings_customerId_fkey")
  @@index([employeeId], map: "bookings_employeeId_fkey")
}

model history {
  bookingId    Int      @id @default(autoincrement())
  employeeId   Int
  customerId   Int
  customerName String
  cleanerName  String
  date         DateTime
  adress       String
  time         DateTime
  status       String
  customer     customer @relation(fields: [customerId], references: [customerId])
  cleaner      employee @relation(fields: [employeeId], references: [employeeId])

  @@index([customerId], map: "history_customerId_fkey")
  @@index([employeeId], map: "history_employeeId_fkey")
}
